@model WebJob.Models.employee
@{
    ViewBag.Title = "profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/register.css" rel="stylesheet" />
<link href="~/Content/list.css" rel="stylesheet" />
<link href="~/Content/Body.css" rel="stylesheet" />
<link href="~/Content/save.css" rel="stylesheet" />
<div class="container">
    <div class="main-content container-fluid" id="homepage">
        <div class="job-skill-indices">
            <h1 class="job-skill-index-headline">My Profile</h1>
            <a class="btn btn-info" href="@Url.Action("EditProfile", new {id = Model.id_employee})">Edit</a>
            <div class="form-group inline-form">
                <img class="icon icon-user" src="@Html.DisplayFor(model => model.avatar)" style="width: 200px; height: 200px; border-radius: 50%" />
            </div>
            <div class="form-group inline-form">
                <strong for="Name">Họ và Tên:</strong> @Html.DisplayFor(model => model.name_employee)
            </div>
            <div class="form-group inline-form">
                <strong for="dob">Ngày sinh: </strong>@Model.day_birth.Value.ToShortDateString()
            </div>
            <div class="form-group inline-form">
                <strong for="Address">Địa chủ: </strong> @Html.DisplayFor(model => model.address_employee)
            </div>
            <div class="form-group inline-form select-gender">
                <strong class="sex-form" for="sex">Giới tính: </strong> @Html.DisplayFor(model => model.gender)
            </div>
            <div class="form-group inline-form">
                <strong for="email">Email: </strong> @Html.DisplayFor(model => model.email)
            </div>
            <div class="form-group inline-form">
                <strong for="phone">Số điện thoại: </strong> @Html.DisplayFor(model => model.phonenumber_employee)
            </div>
        </div>
    </div>
</div>

