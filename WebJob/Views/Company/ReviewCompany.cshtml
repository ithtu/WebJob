@model WebJob.Models.company
@{
    ViewBag.Title = "ReviewCompany";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/register.css" rel="stylesheet" />
<link href="~/Content/list.css" rel="stylesheet" />
<link href="~/Content/Body.css" rel="stylesheet" />
<link href="~/Content/save.css" rel="stylesheet" />


<script type="text/javascript">
    function CRateOut(rating) {
        for (var i = 1; i <= rating; i++) {
            $("#span" + i).attr('class', 'far fa-star')
        }
    }
    function CRateOver(rating) {
        for (var i = 1; i <= rating; i++) {
            $("#span" + i).attr('class', 'fa fa-star')

        }

    }
    function CRateClick(rating) {
        $("#lbRating").val(rating);
        for (var i = 1; i <= rating; i++) {
            $("#span" + i).attr('class', 'fa fa-star')

        }
        for (var i = rating + 1; i <= 5; i++) {
            $("#span" + i).attr('class', 'far fa-star')

        }

    }
    function CRateSelected() {

        var rating = $("#lbRating").val();
        for (var i = 1; i <= rating; i++) {
            $("#span" + i).attr('class', 'fa fa-star')

        }
    }
    function VeryRating() {
        var rating = $("#lbRating").val();
        if (rating === "0") {
            alert("Please choose star");
            return false;
        }
    }
</script>
<style type="text/css">
    textarea {
        width: 93%;
        margin-left: 2rem;
        margin-right: 2rem;
        height: 100px;
    }

    #title {
        height: 30px
    }
    span {
        margin-left: 2rem;
        font-weight: 500;
        font-size: 30px;
    }
    #submit{
        margin-top: 8px;
        margin-left: 2rem;
        color: white;
        font-weight: 500;
        
        font-size: 20px;
        background: blue;
        border-radius: 5px;
        border: 1px solid blue;
    }
    #submit:hover{
        background: red;
    }
</style>
<div class="container">
    <div class="hidden-xs" data-action="click->scroll-top#scrollToTop" data-controller="scroll-top" id="scrolltop">
        <div class="top-arrow"></div>
    </div>
    <div class="saved-jobs-page">
        @using (Html.BeginForm("ReviewCompany", "Company", FormMethod.Post, new { onsubmit = "return VeryRating()" }))
        {
            <input type="hidden" name="id" value="@Model.id_company" />
            <span> Tiêu đề</span>
            <div>

                <textarea id="title" required name="title"></textarea>

            </div>
            <span>Nội dung</span>
            <div>

                <textarea required name="content"></textarea>

            </div>
            <div class="rate" onmouseout="CRateSelected()">

                <span id="span1" onmouseout="CRateOut(1)" onclick="CRateClick(1)" onmouseover="CRateOver(1)" class="far fa-star"></span>
                <span id="span2" onmouseout="CRateOut(2)" onclick="CRateClick(2)" onmouseover="CRateOver(2)" class="far fa-star"></span>
                <span id="span3" onmouseout="CRateOut(3)" onclick="CRateClick(3)" onmouseover="CRateOver(3)" class="far fa-star"></span>
                <span id="span4" onmouseout="CRateOut(4)" onclick="CRateClick(4)" onmouseover="CRateOver(4)" class="far fa-star"></span>
                <span id="span5" onmouseout="CRateOut(5)" onclick="CRateClick(5)" onmouseover="CRateOver(5)" class="far fa-star"></span>

            </div>
            <div>
                <input type="hidden" name="rating" id="lbRating" value="0" />
            </div>
            <input type="hidden" name="idacc" value="@ViewBag.id" />

            <div>
                <input type="submit" value="Save Review" id="submit" />
            </div>
        }

    </div>
    <div class="clearfix"></div>
</div>


