@model WebJob.Models.job
    @using WebJob.Models
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var list = (List<job_detail>)ViewBag.JobCompany;
    var list2 = (List<rating>)ViewBag.Rating;


}
<link href="~/Content/company.css" rel="stylesheet" />
<link href="~/Content/Body.css" rel="stylesheet" />

<link href="~/Content/details.css" rel="stylesheet" />
<div class="std">
    <div class="cps-container">
        <div class="company-page">
            <div class="company-content">
                <div class="headers hidden-xs">
                    <div class="headers__logo">
                        <div class="headers__logo__img">
                            <picture>
                            <img src="@Model.company.logo" />    
                            </picture>
                        </div>
                    </div>
                    <div class="headers__info">
                        <h1 class="headers__info__name">
                           @Model.company.name_company
                        </h1>
                        <div class="headers__info__item">

                            <div class="svg-icon svg-icon--grey headers__info__item-location">
                                <svg class="svg-icon__icon">
                                    <use xlink:href="#location_icon"></use>
                                </svg>
                                <div class="svg-icon__text">Ho Chi Minh</div>
                            </div>
                            <div class="svg-icon">
                                <svg class="svg-icon__icon">
                                    <use xlink:href="#setting_icon"></use>
                                </svg>
                                <div class="svg-icon__text">Sản phẩm</div>
                            </div>
                            <div class="svg-icon">
                                <svg class="svg-icon__icon">
                                    <use xlink:href="#people_icon"></use>
                                </svg>
                                <div class="svg-icon__text">1000+</div>
                            </div>

                            <svg xmlns="http://www.w3.org/2000/svg" class="d-none">
                                <symbol id="vn-flag" viewBox="0 0 512 512">
                                    <circle style="fill:#D80027;" cx="256" cy="256" r="256"></circle>
                                    <polygon style="fill:#FFDA44;" points="256,133.565 283.628,218.594 373.033,218.594 300.702,271.144 328.33,356.174 256,303.623
                    183.67,356.174 211.298,271.144 138.968,218.594 228.372,218.594 "></polygon>
                                </symbol>
                            </svg>
                            <div class="svg-icon">
                                <svg class="svg-icon__icon">
                                    <use xlink:href="#vn-flag"></use>
                                </svg>
                                <div class="svg-icon__text">
                                    Vietnam
                                </div>
                            </div>
                            <div class="svg-icon">
                                <svg class="svg-icon__icon">
                                    <use xlink:href="#calendar_icon"></use>
                                </svg>
                                <div class="svg-icon__text">
                                    Thứ 2 - Thứ 6
                                </div>
                            </div>
                            <div class="svg-icon headers__info__item-ot">
                                <svg class="svg-icon__icon">
                                    <use xlink:href="#time_icon"></use>
                                </svg>
                                <div class="svg-icon__text">
                                    Không có OT
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="headers__actions">
                        <a class="button ibutton full-width ibutton-red" rel="nofollow" href="@Url.Action("ReviewCompany","Company", new {id = Model.id_company })">Viết review</a>
                        <form id="follow-form">
                            @if (Model.company.isFollowing)
                            {
                                <button id="follow-button" class="loadable ibutton ibutton-follow full-width" data-company-id="@Model.id_company">Theo dõi</button>
                            }
                            else
                            {
                                <button id="follow-button" class="loadable ibutton ibutton-follow full-width" data-company-id="@Model.id_company">Đang theo dõi</button>
                            }

                        </form>
                    </div>
                </div>
                <div class="company-page__container">
                    <div class="company-page__left">
                        <ul class="navigation">
                            <li class="navigation__item active">
                                <a data-controller="utm-tracking" href="#desktop1">Tuyển dụng</a>
                                <div class="corner-bottom-right-overlay"></div>
                                <div class="corner-bottom-right-curve"></div>
                            </li>
                            <li class="navigation__item review-tab">
                                <a data-controller="utm-tracking" href="#desktop2">@list2.Count() Reviews</a>
                                <div class="corner-bottom-right-overlay"></div>
                                <div class="corner-bottom-right-curve"></div>
                                <div class="corner-bottom-left-overlay"></div>
                                <div class="corner-bottom-left-curve"></div>
                            </li>
                        </ul>
                        <div class="panel panel-default jobs" id="desktop1">
                            <div class="panel-heading">
                                <h2 class="panel-title">@Model.company.name_company Tuyển Dụng</h2>
                            </div>
                            <div class="panel-body">
                                @foreach (var item in list)
                                {
                                    <div class="job super-hot-job" data-action="click->search--job-selection#select" data-controller="search--job-selection" data-search--job-selection-auto-select-value="0" data-search--job-selection-job-url-value="/it-jobs/back-end-engineer-nodejs-net-python-ngan-hang-a-chau-acb-5040/content?locale=vi">
                                        <div class="job_content">
                                            <div class="logo">
                                                <div class="logo-wrapper job-details-link-wrapper" data-action="mouseover->tooltip#showTooltip click->tooltip#disposeTooltip" data-controller="tooltip" title="" data-bs-original-title="Asia Commercial Bank (ACB)">
                                                    <a target="_blank" href="/nha-tuyen-dung/ngan-hang-a-chau-acb">
                                                        <picture>
                                                           <img src="@Model.company.logo" />
                                                        </picture>
                                                    </a>
                                                </div>
                                                <div class="clearfix"></div>
                                            </div>
                                            <div class="job__description">
                                                <div class="job__body">
                                                    <div class="details">
                                                        <h3 class="title job-details-link-wrapper">
                                                            <a target="_blank" data-controller="utm-tracking" href="@Url.Action("Details","Jobs", new {id = item.id_job_detail })">@item.job.name </a>
                                                        </h3>
                                                        <div class="svg-icon svg-icon--rounded svg-icon--green">
                                                            <svg class="svg-icon__icon">
                                                                <use xlink:href="#usd_icon"></use>
                                                            </svg>
                                                            <div class="svg-icon__text">You'll love it</div>
                                                        </div>
                                                        <div class="d-none d-sm-block">
                                                            <ul class="benefits">
                                                                <li>Phúc lợi siêu hấp dẫn tại ACB</li>
                                                                <li>Lương cực kỳ cạnh tranh</li>
                                                                <li>Áp dụng công nghệ mới nhất</li>
                                                            </ul>
                                                        </div>
                                                        <div class="d-sm-none">
                                                            <div class="city">
                                                                <div class="text">@item.job.company.name_company</div>
                                                            </div>
                                                            <ul class="benefits">
                                                                <li>Phúc lợi siêu hấp dẫn tại ACB</li>
                                                                <li>Lương cực kỳ cạnh tranh</li>
                                                                <li>Áp dụng công nghệ mới nhất</li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="job-bottom">
                                                    <div class="tag-list">
                                                        <a class="job__skill ilabel mkt-track" data-controller="utm-tracking" href="/viec-lam-it/python/ha-noi">
                                                            <span>
                                                                Python
                                                            </span>
                                                        </a><a class="job__skill ilabel mkt-track" data-controller="utm-tracking" href="/viec-lam-it/nodejs/ha-noi">
                                                            <span>
                                                                NodeJS
                                                            </span>
                                                        </a><a class="job__skill ilabel mkt-track" data-controller="utm-tracking" href="/viec-lam-it/.net/ha-noi">
                                                            <span>
                                                                .NET
                                                            </span>
                                                        </a>
                                                        <div class="visible-xs d-sm-none">
                                                            <div class="distance-time-job-posted">
                                                                <span class="distance-time">
                                                                    21 ngày trước
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="city_and_posted_date d-none d-sm-flex">
                                                <div class="city">
                                                    <div class="address">
                                                        <div class="text">Ho Chi Minh</div>
                                                    </div>
                                                </div>
                                                <div class="distance-time-job-posted">
                                                    <span class="distance-time">
                                                        21 ngày trước
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                                
                            </div>
                           
                        </div>
                        <div class="panel panel-default jobs" id="desktop2" style="display: none">
                            <div class="panel-heading">
                                <h2 class="panel-title">@Model.company.name_company Review</h2>
                            </div>
                            <div class="panel-body">
                                @foreach (var item in list2)
                                {
                                    <hr />
                                    <div class="featured-review">

                                        <span class="featured-review__title" style="font-weight: 500">@item.title</span>
                                        <span class="rating-stars-box">

                                            @for (int i = 0; i < item.rate_star; i++)
                                            {
                                                <span class="fa fa-star"></span>
                                            }
                                        </span>


                                        <div class="featured-review__paragraph">
                                            @item.content
                                        </div>
                                    </div>
                                }
                            </div>
                        </div> 
                    </div>
                    <div class="company-page__right"><div class="panel panel-default company-ratings">
    <div class="panel-heading">
        <h3 class="panel-title" style="font-weight: 700">Review "Chất"</h3>
    </div>
    <div class="panel-body disable-user-select">
        @foreach (var item in list2.Where(p=>p.rate_star == 5).Take(5))
        {
            <hr/>
            <div class="featured-review">
                
                <span class="featured-review__title" style="font-weight: 500">@item.title</span>
                <span class="rating-stars-box">

                    @for (int i = 0; i < item.rate_star; i++)
                    {
                        <span class="fa fa-star"></span>
                    }
                </span>


                <div class="featured-review__paragraph">
                    @item.content
                </div>
            </div>
        }
        <br>
        <a class="button ibutton full-width big ibutton-red" rel="nofollow" href="/companies/ngan-hang-a-chau-acb/review/new?utm_campaign=button_feature_review&amp;utm_medium=new_review&amp;utm_source=emp_page">Viết review</a>
    </div>
</div>
                    </div>
                </div>
            </div>
        </div>
       
    </div>
</div>
<script>
    $(document).ready(function () {
        $(".navigation__item").click(function () {
            $('.navigation__item').removeClass("active");
            $(this).addClass("active");
            let id_tab = $(this).children('a').attr('href');
            $('.jobs').hide();
            $(id_tab).fadeIn();

            return false;
        })
    })
    $(".ibutton-follow").click(function (e) {
        var button = $(e.target);
        $.post("/Company/FollowCompany", { id: button.attr("data-company-id") })
            
    });

</script>